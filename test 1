#include <stdio.h>

// Function to calculate the square of a given number
double square(double num) {
    return num * num;
}

int main() {
    double number, square_result;

    printf("Please enter any number: ");
    scanf("%lf", &number);

    square_result = square(number);
    printf("The square of %.2lf is: %.2lf\n", number, square_result);

    return 0;
}
